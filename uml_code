@startuml
class classes.Identite {
  - nip : String
  - nom : String
  - prenom : String
}

class classes.Matiere {
  - nom : String
}

class classes.Formation {
  - id : String
  - matieres : HashMap<classes.Matiere, int>  // matiÃ¨re -> coefficient
  + ajouterMatiere(m : classes.Matiere, coef : int)
  + supprimerMatiere(m : classes.Matiere)
  + getCoefficient(m : classes.Matiere) : int
}

class Etudiant {
  - identite : classes.Identite
  - formation : classes.Formation
  - resultats : HashMap<classes.Matiere, List<Double>>
  + ajouterNote(m : classes.Matiere, note : double)
  + moyenneMatiere(m : classes.Matiere) : double
  + moyenneGenerale() : double
}

class classes.Groupe {
  - etudiants : List<Etudiant>
  - formation : classes.Formation
  + ajouterEtudiant(e : Etudiant)
  + supprimerEtudiant(e : Etudiant)
  + moyenneMatiere(m : classes.Matiere) : double
  + moyenneGenerale() : double
  + triAlpha()
  + triAntiAlpha()
  + triParMerite()
}

' Relations
Etudiant --> "1" classes.Identite
Etudiant --> "1" classes.Formation
Etudiant --> "0..*" classes.Matiere : resultats
classes.Formation --> "1..*" classes.Matiere
classes.Groupe --> "0..*" Etudiant : etudiants
classes.Groupe --> "1" classes.Formation
@enduml
